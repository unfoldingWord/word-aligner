{
  "name": "word-aligner",
  "version": "0.2.2",
  "description": "A library for handling word alignment",
  "main": "lib/index.js",
  "scripts": {
    "test": "eslint ./src ./index.js && jest",
    "fix": "eslint ./src ./index.js --fix",
    "compile": "rimraf lib && babel src/ -d lib/",
    "prebuild": "rm -rf ./lib",
    "build": "babel ./src -d ./lib",
    "prepare": "if [ ! -d './lib/' ]; then npm run build; fi",
    "prepublishOnly": "npm test && npm run build"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/word-aligner.git"
  },
  "keywords": [
    "word-alignment",
    "word",
    "alignment",
    "aligner",
    "translationCore"
  ],
  "author": "@unfoldingword",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/translationCoreApps/word-aligner/issues"
  },
  "homepage": "https://github.com/translationCoreApps/word-aligner#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.6.0",
    "eslint-plugin-jest": "^21.22.1",
    "jest": "^21.2.1"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "fs-extra": "5.0.0",
    "lodash": "^4.17.11",
    "path": "0.12.7",
    "path-extra": "^4.2.1",
    "rimraf": "^2.6.2",
    "string-punctuation-tokenizer": "0.9.1",
    "transform-runtime": "0.0.0",
    "usfm-js": "^1.0.4"
  }
}
